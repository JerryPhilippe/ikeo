<div class="container-show doodle">
  <div class="flex">
    <%= cl_image_tag @item.photo.key, class:"item-img" %>
    <div class="item-infos">
        <h1 style="font-weight: bold"><%= @item.name %></h1>
        <p><%= @item.description %></p>
        <h3 style="font-weight: bold"><%= @item.price %>0â‚¬</h3>
      <div class="doodle-button button-show">
        <%= link_to "ajouter au panier", create_cart_item_path(@item), class:"doodle-link", data: { action: card_item_action((current_user.current_game if user_signed_in?), @item)} %>
      </div>
    </div>
  </div>
  <% if @item.name.downcase == "spiegella" %>

  <div class="flip-card" data-level-4-target="flipCard">
    <%= image_tag "credit-card.png", class:"back" %>
    <div class="front"></div>
  </div>

  <button id="hiden-button" data-action="click->level-4#hidenButton">click here</button>
  <% end %>
</div>
