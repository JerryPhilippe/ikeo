<div data-search-items-target="list">
  <% @items.each do |key, item| %>
    <h1 class="room-title doodle-border"><%= key %></h1>
   <%#  <hr class="doodle"> %>
    <div class="wrapper-index ">
      <% item.each do |product| %>

      <div class="card-return" data-action="<%=card_item_hover((current_user.current_game if user_signed_in?), product)%>" data-level-<%= current_user.current_game.level if user_signed_in? %>-target="<%= product.name.downcase %>">

        <div class="card-index card-front doodle-border" data-action=<%= card_item_action((current_user.current_game if user_signed_in?), product)%>>

          <div class="item-img">
            <%= cl_image_tag product.photo.key %>
          </div>

          <div class="card-index-text ">
            <h1 class=""><%= product.name %></h1>
            <div class="flex-price-link">
              <p><%= product.price%>0â‚¬</p>
              <div class="flex-card" >
                <div class="doodle-button button-index">
                  <%= link_to "En savoir +", item_path(product), class:"doodle-link" %>
                </div>
              </div>
            </div>
          </div>


      </div>
        <div class="card-back doodle-border">
        <p data-level-<%= current_user.current_game.level if user_signed_in? %>-target="back<%= product.name.downcase %>"></p>
        </div>
        </div>
      <% end %>
    </div>
</div>
  <% end %>
