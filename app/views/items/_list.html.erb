<div data-search-items-target="list">
  <%if @items.exists? %>
    <%  room = @items.last  %>
    <h1><%=room.room_type%></h1>
  <% end %>

  <div class="container doodle">

    <div class="wrapper-index ">
      <% @items.each do |item| %>
        <div class="card-index doodle-border ">
          <div class="item-img">
            <%= cl_image_tag item.photo.key%>
          </div>
          <div class="card-index-text ">
            <h1 class=""><%= item.name %></h1>

            <div class="flex-price-link">

              <p><%= item.price%>0â‚¬</p>

              <div class="flex-card" >
                <div class="doodle-button button-index">
                  <%= link_to "Voir cet item", items_path(item), class:"doodle-link" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
