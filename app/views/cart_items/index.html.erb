<div class="container">
  <div class="cart">
    <% if @cart.exists? %>
      <% @cart.each do |article| %>
        <div class="articles">
          <%= cl_image_tag article.photo.key, class:"cart-img"%>
          <div class="article-infos">
            <p><%= article.name %></p>
            <p><%= article.price %></p>
          </div>
        </div>
      <% end %>
    <% else %>
